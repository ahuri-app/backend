generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_FILE_PATH")
}

model User {
  id       String    @id @default(cuid())
  eid      String    @unique
  email    String    @unique
  username String
  tag      String    @unique
  password String
  token    String
  messages Message[]
  channels Channel[]

  @@unique([id, eid])
}

model Channel {
  id       String    @id @default(cuid())
  eid      String    @unique
  name     String
  messages Message[]
  owner    User      @relation(fields: [ownerId, ownerEid], references: [id, eid])
  ownerId  String
  ownerEid String

  @@unique([id, eid])
}

model Message {
  id                   String  @id @default(cuid())
  eid                  String  @unique
  content              String
  User                 User    @relation(fields: [senderId, senderEid], references: [id, eid])
  senderId             String
  senderEid            String
  channelSentInto      Channel @relation(fields: [idOfChannelSentInto, eidOfChannelSentInto], references: [id, eid])
  idOfChannelSentInto  String
  eidOfChannelSentInto String
}
