generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_FILE_PATH")
}

model User {
  id       String    @id @default(cuid())
  email    String    @unique
  username String
  tag      String    @unique
  password String
  token    String    @unique
  messages Message[]
  channels Channel[]
}

model Channel {
  id       String    @id @default(cuid())
  name     String
  messages Message[]
  owner    User      @relation(fields: [ownerId], references: [id])
  ownerId  String
}

model Message {
  id                   String  @id @default(cuid())
  content              String
  sender               User    @relation(fields: [senderId], references: [id])
  senderId             String
  channelSentInto      Channel @relation(fields: [idOfChannelSentInto], references: [id])
  idOfChannelSentInto  String
}
